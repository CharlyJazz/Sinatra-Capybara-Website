<div class="container-fluid">
    <div class="row">
        <div class="col s12">
            <div class="card user-card" id="profile" style="background-image: url(<%= asset_path(@user.user_media.banner_img_url)%>)">
                <div class="card image-profile">
                    <div class="card-image z-depth-4">
                      <a class="dialog-change-photo-profile" href="#modal-change-image">
                        <img class="responsive-img" id="img-profile" src="<%= asset_path(@user.user_media.profile_img_url)%>" style="cursor:pointer">                      
                      </a>
                    </div>
                </div>
                <a href="#modal-change-image" class="dialog-change-banner-profile btn transparent btn-upload-banner"><i class="material-icons">&#xE255;</i></a>
            </div>
        </div>
        <div class="col s9">
            <div class="card-content">
                <div class="card-tabs">
                    <ul class="tabs tabs-fixed-width">
                        <li class="tab">
                            <a href="#albums" class="">Albums</a>
                        </li>
                        <li class="tab">
                            <a class="" href="#tracks">Tracks</a>
                        </li>
                        <li class="tab">
                            <a href="#likes" class="active">Likes</a>
                        </li>
                        <div class="indicator" style="right: -0.0500031px; left: 141.05px;"></div>
                    </ul>
                </div>
                <div class="card-content grey lighten-4">
                    <div id="albums" style="display: none;" class="">
                    <% if @albums.any? %>
                      <% @albums.each do |album | %>
                        <div class="album_wrapper z-depth-1">
                            <figure>
                                <a href="/music/album/<%=album.id %>">
                                    <img src="<%= asset_path('albums/default_album.jpg')%>"  width="230px">
                                </a>
                            </figure>
                            <div class="song-action">
                                <a class="btn-flat dropdown-button" href="#!" data-activates="dropdown2"><i class="material-icons">share</i></a>
                                <a class="btn-flat"  href="#!"><i class="material-icons">favorite</i></a>                                                                                              
                                <a class="pre-delete-album  btn-flat" href="#modal-delete-album" data-id-album="<%=album.id %>"><i class="material-icons">delete_forever</i></a>
                                <a class="btn-flat" href=""><i class="material-icons">play_arrow</i>0</a>       
                                <ul id="dropdown2" class="dropdown-content">
                                    <li><a href="https://www.facebook.com/sharer/sharer.php?u=http%3A//localhost%3A8000/music/play/<%=album.id %>"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="https://pinterest.com/pin/create/button/?url=<%= asset_path('albums/default_album.jpg')%>&media=http%3A//localhost%3A8000/music/play/<%=album.id%>&description=<%= album.name %> - <%=album.description%>"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                                    <li><a href="https://twitter.com/home?status=http%3A//localhost%3A8000/music/album/<%=album.id %>"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="https://plus.google.com/share?url=http%3A//localhost%3A8000/music/album/<%=album.id %>"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>                                    
                                </ul>                            
                            </div>                           
                            <div class="song-dates">
                                <p class="song-title"> <%= album.name %> | <span><%=album.description%></span></p>
                            </div>                            
                        </div>
                      <% end %>
                    <% else %>
                    <h5>No have Albums <a class="btn-flat align-icon-text"  href="/music/create/album">Create Album</a></h5>
                    <hr>
                    <% end %>
                    </div>
                    <div id="tracks" class="" style="display: none;">
                    <% if @songs.any? %>
                        <% @songs.each do |song| %>
                        <div class="song__wrapper z-depth-1">
                            <figure>
                                <a href="/music/play/<%=song.id %>">
                                    <img src="<%= asset_path('songs/default_song.png')%>">
                                </a>
                            </figure>
                            <div class="song-action">
                                <a class="btn-flat dropdown-button" href="#!" data-activates="dropdown2"><i class="material-icons">share</i></a>
                                <a class="btn-flat"  href="#!"><i class="material-icons">file_download</i></a>  
                                <a class="btn-flat"  href="#!"><i class="material-icons">favorite</i></a>                                                                                              
                                <a class="pre-delete-song  btn-flat" href="#modal-delete-song" data-id-song="<%=song.id %>"><i class="material-icons">delete_forever</i></a>
                                <ul id="dropdown2" class="dropdown-content">
                                    <li><a href="https://www.facebook.com/sharer/sharer.php?u=http%3A//localhost%3A8000/music/play/<%=song.id %>"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="https://pinterest.com/pin/create/button/?url=<%= asset_path('songs/default_song.png')%>&media=http%3A//localhost%3A8000/music/play/<%=song.id %>&description=<%= song.title %> - <%=song.description%>"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                                    <li><a href="https://twitter.com/home?status=http%3A//localhost%3A8000/music/play/<%=song.id %>"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="https://plus.google.com/share?url=http%3A//localhost%3A8000/music/play/<%=song.id %>"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>                                    
                                </ul>                            
                            </div>                            
                            <div class="song-dates">
                                <p class="song-title"><%= song.title %> | <span><%=song.description%></span></p>
                                <p>Genre <%=song.genre%></p>
                                <p>Type  <%=song.type%></p>
                                <p>License  <%=song.license%></p>
                                <audio class="col l8 s7 m7" src="<%=song.url_song%>" controls></audio>
                                <a class="btn-flat align-icon-text"  href="#!"><i class="material-icons">play_arrow</i> 0</a>       
